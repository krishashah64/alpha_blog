<h1 align = 'center'>List of all Users</h1>
<% @users.each do |user| %>
	<ul class="listing">
		<div class="row">
			<div class="well col-md-4 col-md-offset-4">
				<li class="article-title">
					<%= link_to user.name, user_path(user) %>
				</li>
				<li><%= user.email %></li>
				<li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
				<% if logged_in? && current_user.admin? %>
					<%= link_to 'Delete this user', user_path(user), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-sm btn-primary' %>
				<% end %>
			</div>
		</div>
	</ul>
<% end %>